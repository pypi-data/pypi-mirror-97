{
  "id": "http://razgovorov.ru/bubot/schemas/bubot.con-schema.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "",
  "title": "configuration",
  "definitions": {
    "bubot.con": {
      "type": "object",
      "properties": {
        "udpCoapPort": {
          "type": "integer",
          "format": "uri",
          "description": "udp device port"
        },
        "udpCoapIPv4": {
          "type": "boolean"
        },
        "udpCoapIPv6": {
          "type": "boolean"
        },
        "udpCoapIPv4Ssl": {
          "type": "boolean"
        },
        "udpCoapIPv6Ssl": {
          "type": "boolean"
        },
        "logLevel": {
          "type": "string",
          "enum": [
            "",
            "info",
            "debug",
            "warning",
            "error"
          ]
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "oic.core-schema.json#/definitions/oic.core"},
    {"$ref": "#/definitions/bubot.con"}
  ]
}
