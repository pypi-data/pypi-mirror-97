#!python

import sys
from cldflex import flex2cldf

if len(sys.argv) > 2:
    flex2cldf.convert(
            flextext_file=sys.argv[1],
            lexicon_file=sys.argv[2],
    )
elif len(sys.argv) == 2:
    flex2cldf.convert(
            flextext_file=sys.argv[1],
    )
elif len(sys.argv) < 2:
    print("Please provide an input file")