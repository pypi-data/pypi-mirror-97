#!python

import sys
from cldflex import source2flex
if len(sys.argv) < 2:
    print("Please provide a text file.")
elif len(sys.argv) == 2:
    source2flex.convert(
        filename=sys.argv[1],
    )
else:
    source2flex.convert(
        filename=sys.argv[1],
        mapping_file=sys.argv[2],
    )