#!/usr/bin/env python3

import sys
from cldflex import elicit2flex
if len(sys.argv) < 2:
    print("Please provide a text file and a language code.")
elif len(sys.argv) < 3:
    print("Please provide a language code.")
else:
    elicit2flex.convert(
        filename=sys.argv[1],
        language_id=sys.argv[2],
    )