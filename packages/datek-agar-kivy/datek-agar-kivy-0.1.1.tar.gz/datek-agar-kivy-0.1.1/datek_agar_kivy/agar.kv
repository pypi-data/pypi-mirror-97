#:kivy 2.0.0

<Game>:
    button: button_connect
    player_name: input_player

    host: input_host
    port: input_port

    host_label: label_host
    port_label: label_port
    player_name_label: label_player_name

    TextInput:
        id: input_player
        pos: root.width * 0.5 - 40, root.height * 0.9 - 15
        size: 200, 28

    Label:
        id: label_player_name
        pos: root.width * 0.3, root.height * 0.9 - 15
        size: 150, 28
        text: "Player name"

    TextInput:
        id: input_host
        pos: root.width * 0.5 - 40, root.height * 0.85 - 15
        size: 200, 28

    Label:
        id: label_host
        pos: root.width * 0.3, root.height * 0.85 - 15
        size: 150, 28
        text: "Host"

    TextInput:
        id: input_port
        pos: root.width * 0.5 - 40, root.height * 0.8 - 15
        size: 200, 28
        text: "9582"

    Label:
        id: label_port
        pos: root.width * 0.3, root.height * 0.8 - 15
        size: 150, 28
        text: "Port"

    Button:
        id: button_connect
        pos: root.width * 0.5 - 40, root.height * 0.75 - 15
        size: 80, 30
        text: 'Connect'
        on_press: root.connect()


    RelativeLayout:
        size: root.width, root.height
        pos: 0, 0

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.3
            Rectangle:
                pos: self.pos
                size: self.size

<Bacteria>:
    canvas:
        Color:
            hsv: self.hue, 1, 1

        Ellipse:
            pos: self.pos
            size: self.size


<HorizontalLine>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.4
        Rectangle:
            pos: self.pos
            size: self.width, 2


<VerticalLine>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.4
        Rectangle:
            pos: self.pos
            size: 2, self.height