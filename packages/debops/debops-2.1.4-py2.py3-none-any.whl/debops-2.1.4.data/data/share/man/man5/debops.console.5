\- name: Manage console configuration
  collections: [ \(aqdebops.debops\(aq ]
  hosts: [ \(aqdebops_all_hosts\(aq, \(aqdebops_service_console\(aq ]
  become: True

  environment: \(aq{{ inventory__environment | d({})
