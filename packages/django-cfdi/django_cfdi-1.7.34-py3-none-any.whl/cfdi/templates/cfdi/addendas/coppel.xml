<cfdi:Addenda>
<requestForPayment type="SimpleInvoiceType" contentVersion="1.0" documentStructureVersion="CPLM1.0" documentStatus="ORIGINAL" DeliveryDate="{{ fecha_entrega }}">
<requestForPaymentIdentification>
<entityType>INVOICE</entityType>
<uniqueCreatorIdentification>5832</uniqueCreatorIdentification>
</requestForPaymentIdentification>
<orderIdentification>
<referenceIdentification type="ON">{{ numero_pedido_comprador }}</referenceIdentification>
<ReferenceDate>{{ fecha_pedido_comprador }}</ReferenceDate>
<FechaPromesaEnt>{{ fecha_entrega }}</FechaPromesaEnt>
</orderIdentification>
<seller>
<gln/>
<alternatePartyIdentification type="SELLER_ASSIGNED_IDENTIFIER_FOR_A_PARTY">73792</alternatePartyIdentification>
<IndentificaTipoProv>1</IndentificaTipoProv>
</seller>
<shipTo>
<nameAndAddress/>
<BodegaDestino>{{ bodega_destino }}</BodegaDestino>
<BodegaReceptora>{{ bodega_receptora }}</BodegaReceptora>
</shipTo>
<RegionCel>
<Region>1</Region>
</RegionCel>
<Customs>
<alternatePartyIdentification type="TN">{{ numero_pedimento }} </alternatePartyIdentification>
</Customs>
<currency currencyISOCode="MXN">
<currencyFunction>BILLING_CURRENCY</currencyFunction>
<rateOfChange>1.0000000</rateOfChange>
</currency>
<FleteCaja type="SELLER_PROVIDED">{{ empresa_transportista }}</FleteCaja>
<allowanceCharge allowanceChargeType="ALLOWANCE_GLOBAL" settlementType="BILL_BACK">
<specialServicesType>AA</specialServicesType>
<monetaryAmountOrPercentage>
<rate base="INVOICE_VALUE">
<percentage>0.00</percentage>
</rate>
</monetaryAmountOrPercentage>
</allowanceCharge>

{% for concepto in conceptos %}
	<lineItem type="SimpleInvoiceLineItemType" number="{{ concepto.numero_partida }}">
		<tradeItemIdentification>
		<gtin/>
		</tradeItemIdentification>
		<alternateTradeItemIdentification type="BUYER_ASSIGNED">{{ concepto.codigo }}</alternateTradeItemIdentification>
		<tradeItemDescriptionInformation language="ES">
			<longText>{{ concepto.descripcion }}</longText>
		</tradeItemDescriptionInformation>
		<invoicedQuantity unitOfMeasure="H87">{{ concepto.cantidad }}</invoicedQuantity>
		<grossPrice>
			<Amount>{{ concepto.precio_unitario }}</Amount>
		</grossPrice>
		<netPrice>
			<Amount>{{ concepto.precio_unitario }}</Amount>
		</netPrice>
		<modeloInformation>
			<longText>{{ concepto.codigo }}</longText>
		</modeloInformation>
		<extendedAttributes>
			<lotNumber productionDate="{{ concepto.fecha_produccion }}">{{ concepto.lote_producto }}</lotNumber>
		</extendedAttributes>
		<allowanceCharge allowanceChargeType="ALLOWANCE_GLOBAL">
			<specialServicesType>PAD</specialServicesType>
			<monetaryAmountOrPercentage>
				<percentagePerUnit>0.00</percentagePerUnit>
				<ratePerUnit>
					<amountPerUnit>0.00</amountPerUnit>
				</ratePerUnit>
			</monetaryAmountOrPercentage>
		</allowanceCharge>
		<totalLineAmount>
			<grossAmount>
				<Amount>{{ concepto.importe }}</Amount>
			</grossAmount>
			<netAmount>
				<Amount>{{ concepto.importe }}</Amount>
			</netAmount>
		</totalLineAmount>
		<Pedimento>{{ concepto.numero_pedimento }}</Pedimento>
		<FechaEntrada>{{ concepto.fecha_entrada }}</FechaEntrada>
	</lineItem>
{% endfor %}

<totalAmount>
	<Amount>{{ importe }}</Amount>
</totalAmount>
<TotalAllowanceCharge allowanceOrChargeType="ALLOWANCE">
	<specialServicesType>PAD</specialServicesType>
	<Amount>0.00</Amount>
</TotalAllowanceCharge>
<baseAmount>
	<Amount>{{ importe }}</Amount>
</baseAmount>
<tax type="VAT">
	<taxPercentage>{{ porcentaje_iva }}</taxPercentage>
	<taxAmount>{{ monto_iva }}</taxAmount>
	<taxCategory>TRANSFERIDO</taxCategory>
</tax>
<payableAmount>
<Amount>{{ total }}</Amount>
</payableAmount>
<cadenaOriginal>
<Cadena>{{ cadena_original }}</Cadena>
</cadenaOriginal>
</requestForPayment>
</cfdi:Addenda>