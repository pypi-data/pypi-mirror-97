<cfdi:Addenda>
    <if:FacturaInterfactura
        TipoDocumento="Factura"
        schemaLocation="https://www.interfactura.com/Schemas/Documentos https://www.interfactura.com/Schemas/Documentos/DocumentoInterfactura.xsd"
        xmlns:if="https://www.interfactura.com/Schemas/Documentos">
        <if:Emisor RI="{{ ri_emisor }}"/>
        <if:Receptor RI="{{ ri_receptor }}"/>
        <if:Encabezado
            Moneda="MXN"
            FolioOrdenCompra="{{ folio_orden_compra }}"
            FolioNotaRecepcion="{{ folio_nota_recepcion }}"
            Fecha="{{ fecha_cfdi }}"
            CondicionPago="{{ dias_condicion }}"
            IVAPCT="{{ porcentaje_iva }}"
            NumProveedor="{{ numero_proveedor}}"
            CargoTipo="{{ tipo_cargo }}"
            SubTotal="{{ importe }}"
            {% if serie %}
                Serie="{{ serie }}"
            {% endif %}
            Folio="{{ folio }}"
            Iva="{{ iva }}"
            Total="{{ total }}"
            Observaciones="{{ observaciones }}">
            {% for concepto in conceptos %}
                <if:Cuerpo
                    Cantidad="{{ concepto.cantidad }}"
                    Concepto="{{ concepto.descripcion }}"
                    Codigo="{{ concepto.codigo }}"
                    PUnitario="{{ concepto.precio_unitario }}"
                    Importe="{{ concepto.importe }}"
                    UnidadMedida="{{ concepto.unidad_medida }}"
                    Partida="{{ concepto.numero_partida }}"
                    Iva="{{ concepto.iva }}"
                    IVAPCT="{{ concepto.porcentaje_iva }}"/>
            {% endfor %}
        </if:Encabezado>
    </if:FacturaInterfactura>
</cfdi:Addenda>
