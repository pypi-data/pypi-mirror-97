{% load cfdi_tags %}
<cfdi:Addenda>
  <Multiasistencia xmlns="http://www.diverza.com/ns/addenda/multiasistencia/1" xsi:schemaLocation="http://www.diverza.com/ns/addenda/multiasistencia/1 schema.xsd" Version="1.0" Tipo="{{ tipo }}" Proveedor="{{ clave_proveedor }}" Siniestro="{{ no_siniestro }}" SubTotal="{{ importe}}" IVA="{{ iva }}" IVARet="{{ retencion_iva }}" ISRRet="{{ retencion_isr }}" Total="{{ total }}" OrdenPago="{{ orden_pago }}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    

    {% if codigo_nags %}
      <Cristales Deducible="{{ cristales_deducible|cur }}" CodigoNAGS="{{ codigo_nags|cur }}"/>
    {% endif %}

    {% if costo_honorarios %}
      <Honorarios>
        <Servicio OrdenDePagoHonorarios="1" Costo="{{ costo_honorarios|cur }}"/>
      </Honorarios>
    {% endif %}

    {% if costo_gruas %}
      <Gruas>
        <Servicio Costo="{{ costo_gruas|cur }}"/>
      </Gruas>
    {% endif %}

    {% if costo_asistencia %}
      <Asistencia>
        <Servicio Costo="{{ costo_asistencia|cur }}"/>
      </Asistencia>
    {% endif %}

    {% if costo_reparaciones %}
      <Reparaciones NumValuacionInicial="{{ num_valuacion_inicial }}" Costo="{{ costo_reparaciones|cur }}">
        <ValeRefacciones Costo="{{ costo_reparaciones|cur }}"/>
      </Reparaciones>
    {% endif %}

    {% if costo_gmedicos %}
      <GMedicos PaseMedico="{{ pase_medico }}" Costo="{{ costo_gmedicos|cur }}"/>
    {% endif %}
  </Multiasistencia>
</cfdi:Addenda>