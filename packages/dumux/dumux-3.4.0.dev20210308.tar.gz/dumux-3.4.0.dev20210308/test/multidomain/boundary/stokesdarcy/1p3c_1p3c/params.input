Porosity = 0.3
Tortuosity = 0.5

[Problem]
Name = test_md_boundary_darcy1p3c_stokes1p3c_horizontal
EnableGravity = false

[Vtk]
AddVelocity = 1

[Newton]
MaxRelativeShift = 1e-10

[Assembly]
NumericDifference.BaseEpsilon = 1e-8
