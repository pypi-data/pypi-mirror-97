<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.kisters.water.python</groupId>
  <artifactId>kisters.water.time_series</artifactId>
  <version>0.7.3</version>
  <name>KISTERS :: ${project.artifactId}</name>
  <packaging>pom</packaging>
  <description>KISTERS WATER Time Series Access library</description>

  <parent>
    <groupId>de.kisters.water</groupId>
    <artifactId>water-parent</artifactId>
    <version>[1, 2]</version>
  </parent>

  <scm>
    <connection>scm:git:https://gitlab.com/kisters/kisters.water.time_series.git</connection>
    <developerConnection>scm:git:git@gitlab.com/kisters/kisters.water.time_series.git</developerConnection>
    <url>https://gitlab.com/kisters/kisters.water.time_series</url>
    <tag>master</tag>
  </scm>

  <properties>
    <distroversion>
      ${project.artifact.selectedVersion.majorVersion}.${project.artifact.selectedVersion.minorVersion}.${project.artifact.selectedVersion.incrementalVersion}
    </distroversion>
    <sonar.coverage.exclusions>setup.py,docs/*,docs/scripts/*,examples/*</sonar.coverage.exclusions>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>results</directory>
            </fileset>
            <fileset>
              <directory>dist</directory>
            </fileset>
            <fileset>
              <directory>build</directory>
            </fileset>
            <fileset>
              <directory>htmlcov</directory>
            </fileset>
            <fileset>
              <directory>${basedir}</directory>
              <includes>
                <include>**/__pycache__</include>
                <include>**/*.egg-info</include>
                <include>**/*.metadata</include>
                <include>coverage.xml</include>
              </includes>
            </fileset>
            <fileset>
              <directory>__pycache__</directory>
            </fileset>
            <fileset>
              <directory>kisters.water.time_series.egg-info</directory>
            </fileset>
            <fileset>
              <directory>.</directory>
              <includes>**/*.pyc</includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <executable>python</executable>
          <workingdirectory>${basedir}</workingdirectory>
        </configuration>
        <executions>
          <execution>
            <id>setuptools clean</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>setup.py</argument>
                <argument>clean</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>1-pipinstall</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-s</argument>
                <argument>-m</argument>
                <argument>pip</argument>
                <argument>install</argument>
                <argument>--upgrade</argument>
                <argument>-r</argument>
                <argument>requirements.txt</argument>
                <argument>-e</argument>
                <argument>.[test]</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>setuptools compile</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>setup.py</argument>
                <argument>build</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>setuptools package</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>setup.py</argument>
                <argument>bdist_wheel</argument>
                <argument>bdist_egg</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>coverage and pytest</id>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${skipTests}</skip>
              <arguments>
                <argument>-s</argument>
                <argument>-m</argument>
                <argument>coverage</argument>
                <argument>run</argument>
                <argument>-m</argument>
                <argument>pytest</argument>
                <argument>--junitxml</argument>
                <argument>target/junit.xml</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>coverage xml</id>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${skipTests}</skip>
              <arguments>
                <argument>-m</argument>
                <argument>coverage</argument>
                <argument>xml</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>setuptools deploy</id>
            <phase>deploy</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>setup.py</argument>
                <argument>bdist_wheel</argument>
                <argument>bdist_egg</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>twine upload</id>
            <phase>deploy</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>twine</executable>
              <arguments>
                <argument>upload</argument>
                <argument>-r</argument>
                <argument>kisters</argument>
                <argument>dist/*</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts-1</id>
            <!-- here the phase you need -->
            <phase>package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/dist</directory>
                  <targetPath></targetPath>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
