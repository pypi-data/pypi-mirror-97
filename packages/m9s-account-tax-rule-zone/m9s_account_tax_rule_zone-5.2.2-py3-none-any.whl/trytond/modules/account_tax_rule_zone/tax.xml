<tryton>
    <data>
        <record model="ir.ui.view" id="tax_zone_view_form">
            <field name="model">account.tax.zone</field>
            <field name="type">form</field>
            <field name="name">tax_zone_form</field>
        </record>
        <record model="ir.ui.view" id="tax_zone_view_tree">
            <field name="model">account.tax.zone</field>
            <field name="type">tree</field>
            <field name="name">tax_zone_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_tax_zone_form">
            <field name="name">Tax Zones</field>
            <field name="res_model">account.tax.zone</field>
        </record>
        <record model="ir.action.act_window.view" id="act_tax_zone_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="tax_zone_view_tree"/>
            <field name="act_window" ref="act_tax_zone_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_tax_zone_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="tax_zone_view_form"/>
            <field name="act_window" ref="act_tax_zone_form"/>
        </record>
        <menuitem parent="account.menu_taxes" action="act_tax_zone_form"
            id="menu_tax_zone_form"/>

        <record model="ir.model.access" id="access_tax_zone">
            <field name="model" search="[('model', '=', 'account.tax.zone')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_tax_zone_account_admin">
            <field name="model" search="[('model', '=', 'account.tax.zone')]"/>
            <field name="group" ref="account.group_account_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
