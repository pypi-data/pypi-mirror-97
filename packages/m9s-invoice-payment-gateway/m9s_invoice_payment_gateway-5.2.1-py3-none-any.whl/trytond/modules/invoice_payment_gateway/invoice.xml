<tryton>
    <data>
        <record model="ir.action.wizard" id="wizard_pay_using_transaction">
            <field name="name">Pay using Payment Transaction</field>
            <field name="wiz_name">account.invoice.pay_using_transaction</field>
            <field name="model">account.invoice</field>
        </record>
        <record model="ir.ui.view" id="pay_using_transaction_start_view_form">
            <field name="model">account.invoice.pay_using_transaction.start</field>
            <field name="type">form</field>
            <field name="name">pay_using_transaction_start_form</field>
        </record>
        <record model="ir.ui.view" id="pay_using_transaction_failed_view_form">
            <field name="model">account.invoice.pay_using_transaction.failed</field>
            <field name="type">form</field>
            <field name="name">pay_using_transaction_failed_form</field>
        </record>
        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_form" />
            <field name="name">invoice_form</field>
        </record>

	<!-- Buttons -->
	<record model="ir.model.button" id="invoice_pay_transaction_button">
            <field name="name">pay_using_payment_transaction</field>
            <field name="string">Pay using transaction</field>
            <field name="model" search="[('model', '=', 'account.invoice')]"/>
        </record>
        <record model="ir.model.button-res.group" id="invoice_pay_transaction_button_group_account">
            <field name="button" ref="invoice_pay_transaction_button"/>
            <field name="group" ref="account.group_account"/>
        </record>

    </data>
</tryton>
