<data>
    <xpath expr="/form/notebook/page/field[@name='products']" position="replace">
          <field name="products" colspan="4"
              view_ids="product.product_view_tree"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='general']" position="after">
        <page string="Description" id="template-description">
            <group col="2" colspan="6" yexpand="1" yfill="1" id="product_description">
                <separator name="description"/>
                <separator name="long_description"/>
                <field name="description" />
                <field name="long_description"/>
            </group>
        </page>
        <page string="Media" id="template-media">
            <field name="media" colspan="4"/>
        </page>
    </xpath>
</data>
