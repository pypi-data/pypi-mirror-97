<data>
    <xpath expr="/form/notebook" position="inside">
        <page string="Checkout Configuration" id="checkout">
            <separator colspan="4" string="Credit Card"
              id="credit_card"/>
            <label name="accept_credit_card"/>
            <field name="accept_credit_card"/>
            <label name="credit_card_gateway"/>
            <field name="credit_card_gateway" xfill="1"/>
            <separator colspan="4" string="Credit Card Instructions"
                id="credit_card_instructions"/>
            <field name="instructions" colspan="4"/>
            <label name="save_payment_profile"/>
            <field name="save_payment_profile"/>
        </page>
    </xpath>
</data>
