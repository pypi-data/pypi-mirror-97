{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/MessagingExperimentArguments",
  "definitions": {
    "MessagingExperimentArguments": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "description": "Unique identifier for this experiment",
          "pattern": "^[A-Za-z0-9\\-_]+$"
        },
        "userFacingName": {
          "type": "string",
          "description": "User-facing name of the experiment",
          "minLength": 1
        },
        "userFacingDescription": {
          "type": "string",
          "description": "User-facing description of the experiment",
          "minLength": 1
        },
        "branches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "slug": {
                "type": "string",
                "description": "Unique identifier for this branch of the experiment"
              },
              "ratio": {
                "type": "number",
                "description": "Ratio of users who should be grouped into this branch",
                "minimum": 1
              },
              "groups": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "A list of experiment groups that can be used to exclude or select related experiments. May be empty."
              },
              "value": {
                "type": "object",
                "additionalProperties": {},
                "description": "Message content"
              }
            },
            "required": [
              "slug",
              "ratio",
              "groups",
              "value"
            ],
            "description": "Messaging experiment branch"
          },
          "description": "List of experimental branches"
        },
        "experimentDocumentUrl": {
          "type": "string",
          "description": "URL of a document describing the experiment",
          "format": "uri",
          "default": ""
        },
        "isEnrollmentPaused": {
          "type": "boolean",
          "description": "If true, new users will not be enrolled in the study.",
          "default": false
        }
      },
      "required": [
        "slug",
        "userFacingName",
        "userFacingDescription",
        "branches",
        "experimentDocumentUrl"
      ],
      "description": "Messaging experiment"
    }
  }
}