{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Feature",
  "definitions": {
    "Feature": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "description": "Should match the filename of the feature definition"
        },
        "name": {
          "type": "string",
          "description": "Human-readable short name"
        },
        "description": {
          "type": "string",
          "description": "Longer description of the feature under measure"
        },
        "telemetry": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "event"
                  },
                  "event_category": {
                    "type": "string",
                    "description": "Category of the event to match"
                  },
                  "event_method": {
                    "type": "string",
                    "description": "Method of the event to match. If provided, must match exactly"
                  },
                  "event_object": {
                    "type": "string",
                    "description": "Object of the event to match. If provided, must match exactly"
                  },
                  "event_value": {
                    "type": "string",
                    "description": "String value of the event to match. If provided, must match exactly"
                  }
                },
                "required": [
                  "kind",
                  "event_category"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "scalar"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the scalar to match, in dot-separated form, like `browser.engagement.tab_pinned_event_count`."
                  }
                },
                "required": [
                  "kind",
                  "name"
                ]
              }
            ]
          },
          "description": "Telemetry indicating whether the feature was used"
        }
      },
      "required": [
        "slug",
        "name",
        "description",
        "telemetry"
      ]
    }
  }
}