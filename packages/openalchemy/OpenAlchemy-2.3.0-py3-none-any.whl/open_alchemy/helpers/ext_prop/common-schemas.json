{
  "ColumnList": {
    "type": "array",
    "items": {
      "type": "string"
    },
    "minItems": 1
  },
  "ColumnListList": {
    "type": "array",
    "items": {
      "$ref": "#/ColumnList"
    },
    "minItems": 1
  },
  "Unique": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "columns": {
        "$ref": "#/ColumnList"
      }
    },
    "required": ["columns"]
  },
  "UniqueList": {
    "type": "array",
    "items": {
      "$ref": "#/Unique"
    },
    "minItems": 1
  },
  "Index": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "expressions": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "unique": {
        "type": "boolean"
      }
    },
    "required": ["expressions"]
  },
  "IndexList": {
    "type": "array",
    "items": {
      "$ref": "#/Index"
    },
    "minItems": 1
  },
  "CompositeIndex": {
    "oneOf": [
      {
        "$ref": "#/ColumnList"
      },
      {
        "$ref": "#/ColumnListList"
      },
      {
        "$ref": "#/Index"
      },
      {
        "$ref": "#/IndexList"
      }
    ]
  },
  "CompositeUnique": {
    "oneOf": [
      {
        "$ref": "#/ColumnList"
      },
      {
        "$ref": "#/ColumnListList"
      },
      {
        "$ref": "#/Unique"
      },
      {
        "$ref": "#/UniqueList"
      }
    ]
  },
  "ObjectRef": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string"
      },
      "x-de-$ref": {
        "$ref": "#/x-de-$ref"
      }
    },
    "required": ["type", "x-de-$ref"]
  },
  "BackRef": {
    "type": "object",
    "additionalProperties": {
      "oneOf": [
        {
          "$ref": "#/ObjectRef"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "items": {
              "$ref": "#/ObjectRef"
            }
          },
          "required": ["type", "items"]
        }
      ]
    }
  },
  "Mixin": {
    "type": "string",
    "nullable": false,
    "minLength": 1
  },
  "MixinList": {
    "type": "array",
    "nullable": false,
    "items": { "$ref": "#/Mixin" },
    "minItems": 1
  },
  "Mixins": {
    "oneOf": [{ "$ref": "#/Mixin" }, { "$ref": "#/MixinList" }]
  }
}
