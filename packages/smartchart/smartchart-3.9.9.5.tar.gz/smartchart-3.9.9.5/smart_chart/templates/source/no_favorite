<script src="/static/js/jquery-2.2.3.min.js"></script>
<script>
$("#submitup").click(function(){
    let key = $.trim($('#authkey').val());
    if(key === ''){
        $('#msg').html('请输入KEY');
        return;
    }
    $.ajax({type: "POST",url: '/echart/auth_right/', data:{key: key} ,success: function (data)
    { $('#msg').html(data['msg']);
} });
});
</script>


